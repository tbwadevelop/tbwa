/**
 * Implements hook_uninstall().
 */
function dark_uninstall() {
   node_type_delete('sainet');
   return drupal_set_message(t("delete table sainet "), 'status', TRUE);
}

/**
 * Implements hook_entity_info().
 */
function dark_entity_info() {
  $info = array();
  $info['wolfdark'] = array(
    'label' => t('Project Sainet'),
    'base table' => 'sainet',
    'entity keys' => array(
      'id' => 'id',
      'label' => 'name',
    ),
    'module' => 'dark',
  );
  return $info;	
}

