          'type' => 'serial',
          'unsigned' => TRUE,
          'not null' => TRUE
        ),

  		  'date_send_registry' => array(
  		    'type' => 'datetime',
  		    'mysql_type' => 'datetime',
  		  ),  

         'name' => array(
            'type' => 'varchar',
            'length' => 40,
            'not null' => true,
            'description' => 'name of person',
         ),

         'lastname' => array(
            'type' => 'varchar',
            'length' => 40,
            'not null' => true,
            'description' => 'lastname of person',
         ),

         'gender' => array(
            'type' => 'varchar',
            'length' => 10,
            'not null' => true,
            'description' => 'gender of person',
         ),

      		'day_happy_birthday' => array(
      		    'type' => 'datetime',
      		    'mysql_type' => 'datetime',
      		),         

        'city' => array(
           'type' => 'varchar',
           'length' => 20,
           'not null' => true,
           'description' => 'city of person',
         ),

        'phone' => array(
           'type' => 'int',
           'size' => 'big',
           'not null' => true,
           'description' => 'phone of person',
